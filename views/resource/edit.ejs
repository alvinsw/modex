<%
var doc = data.record;
var fields = data.fields;
%>
<form id="update" name="update" method="post" action="<%=_.url.action('update',doc._id)%>?_method=put">
  <label for="uid">Unique Identifier:</label>
  <input type="text" name="uid" id="uid" disabled="" value="<%=doc._id%>" />
  <br />
  <%- _.form(fields, doc, 'write') -%>
  <button type="submit" name="_redirect" value="..">Save and Close</button>
  <button type="submit" name="_redirect" value="<%=_.url.action('edit', doc._id)%>">Save</button>
</form>
